<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="#7fcff7"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:textColor="@color/abc_search_url_text_selected"
        android:text="OR"
        android:layout_marginBottom="116dp"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="SEARCH PATIENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textColor="#d42f2f"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/patientID" />

    <ImageButton
        android:src="@drawable/newuserregistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:backgroundTint="@color/purple"
        android:elevation="0dp"
        android:layout_marginTop="76dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginEnd="122dp" />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="PATIENT ID"
        android:ems="10"
        android:id="@+id/patientID"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:textColor="?attr/colorPrimaryDark"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginStart="103dp" />

    <Button

        android:text="SUBMIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:fontFamily="sans-serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:textColor="@color/abc_search_url_text_pressed"
        android:layout_below="@+id/patientID"
        android:layout_alignStart="@+id/patientID" />

</RelativeLayout>