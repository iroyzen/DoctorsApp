<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back10">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:id="@+id/Patient_Image"
        android:src="@drawable/camera2"
        android:background="#ffffff"
        android:layout_alignEnd="@+id/editTextOcc"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignTop="@+id/textView8"
        android:layout_above="@+id/captureImage" />

    <TextView
        android:text="PATIENT'S NAME :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="24sp"
        android:textColor="#1a8400"
        android:textAlignment="center"
        android:layout_marginLeft="14dp"
        android:layout_alignTop="@+id/radioGroup"
        android:layout_alignEnd="@+id/submit"
        android:layout_alignBottom="@+id/radioGroup"
        android:gravity="bottom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/PatientName"
        android:textColor="@android:color/black"
        android:background="@drawable/background_new"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/checkBoxWO"
        android:layout_toStartOf="@+id/editTextSDW"
        android:layout_alignEnd="@+id/editTextSDW" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/radioGroup">

        <RadioButton
            android:text="MALE      "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonMale"
            android:textStyle="normal|bold"
            android:textColor="#000000"
            android:background="#7f7f7f"
            android:checked="false"
            android:layout_marginRight="10dp" />
        <RadioButton
            android:text="FEMALE  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonFemale"
            android:textStyle="normal|bold"
            android:textColor="#000000"
            android:background="#7f7f7f"
            android:checked="false"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp" />


    </RadioGroup>


    <CheckBox
        android:text="W/O   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBoxSO"
        android:layout_toEndOf="@+id/checkBoxSO"
        android:layout_marginStart="18dp"
        android:id="@+id/checkBoxWO"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:background="#7f7f7f"
        android:checked="false" />

    <CheckBox
        android:text="D/O    "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBoxWO"
        android:layout_toEndOf="@+id/checkBoxWO"
        android:layout_marginStart="13dp"
        android:id="@+id/checkBoxDO"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:checked="false"
        android:background="#7f7f7f" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:text="  NAME"
        android:ems="10"
        android:id="@+id/editTextSDW"
        android:textColor="?attr/actionModeSplitBackground"
        android:background="@android:drawable/editbox_background"
        android:layout_alignTop="@+id/checkBoxDO"
        android:layout_toEndOf="@+id/checkBoxDO"
        android:layout_marginStart="65dp" />


    <CheckBox
        android:text="S/O   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxSO"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:background="#7f7f7f"
        android:checked="false"
        android:layout_marginTop="101dp"
        android:layout_below="@+id/textView8"
        android:layout_toStartOf="@+id/textView8" />

    <TextView
        android:text="OCCUPATION :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView13" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextOcc"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toEndOf="@+id/textView11"
        android:textColor="?attr/actionModeSplitBackground"
        android:background="@android:drawable/editbox_background" />

    <TextView
        android:text="       PHN NO :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView11"
        android:layout_toEndOf="@+id/editTextOcc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextPhone"
        android:textColor="?attr/colorPrimaryDark"
        android:layout_alignTop="@+id/editTextOcc"
        android:layout_toEndOf="@+id/Address"
        android:background="@android:drawable/editbox_background_normal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:inputType="text"
        android:id="@+id/Address"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/checkBoxWO"
        android:textSize="15sp"
        android:textStyle="normal|italic"
        android:textAllCaps="true"
        android:background="@android:drawable/editbox_background"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:gravity="top|left" />

    <Button
        android:text="BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView13"
        android:layout_marginBottom="11dp"
        android:id="@+id/button6"
        android:textStyle="normal|bold" />

    <Button
        android:text="CLEAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/submit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:id="@+id/button8"
        android:textStyle="normal|bold" />

    <Button
        android:text="SUBMIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />


    <TextView
        android:text="ADDRESS :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:paddingLeft="0dp"
        android:id="@+id/textView13"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:layout_below="@+id/editTextOcc"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture Image"
        android:id="@+id/captureImage"
        android:layout_above="@+id/textView11"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        AGE:  "
        android:id="@+id/textViewAge"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView12"
        android:layout_toEndOf="@+id/editTextPhone" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextAge"
        android:layout_alignTop="@+id/editTextPhone"
        android:layout_toEndOf="@+id/textViewAge"
        android:textColor="#000000"
        android:background="@android:drawable/editbox_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLOOD GROUP:   "
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="83dp"
        android:layout_alignTop="@+id/textViewAge"
        android:layout_toEndOf="@+id/editTextAge" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextBloodGrp"
        android:textColor="#000000"
        android:background="@android:drawable/editbox_background"
        android:layout_alignTop="@+id/editTextAge"
        android:layout_toEndOf="@+id/textView3" />


</RelativeLayout>