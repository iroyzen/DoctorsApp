<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back10">

    <ImageView
        android:src="@drawable/back20"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:id="@+id/Patient_Image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/checkBox"
        android:layout_marginLeft="10dp"
        android:layout_alignEnd="@+id/editText6"
        android:layout_above="@+id/captureImage" />

    <TextView
        android:text="PATIENT'S NAME :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="24sp"
        android:textColor="#1a8400"
        android:textAlignment="center"
        android:layout_marginLeft="14dp"
        android:layout_alignTop="@+id/radioGroup"
        android:layout_alignEnd="@+id/submit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/PatientName"
        android:textColor="@android:color/black"
        android:background="@drawable/background_new"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_toStartOf="@+id/editText5"
        android:layout_alignEnd="@+id/editText5" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/radioGroup">

        <RadioButton
            android:text="MALE      "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:textStyle="normal|bold"
            android:textColor="#000000"
            android:background="#7f7f7f"
            android:checked="false"
            android:layout_marginRight="10dp" />
        <RadioButton
            android:text="FEMALE  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:textStyle="normal|bold"
            android:textColor="#000000"
            android:background="#7f7f7f"
            android:checked="false"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp" />


    </RadioGroup>


    <CheckBox
        android:text="W/O   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox"
        android:layout_marginStart="18dp"
        android:id="@+id/checkBox2"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:background="#7f7f7f"
        android:checked="false" />

    <CheckBox
        android:text="D/O    "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkBox2"
        android:layout_toEndOf="@+id/checkBox2"
        android:layout_marginStart="13dp"
        android:id="@+id/checkBox3"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:checked="false"
        android:background="#7f7f7f" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:text="NAME"
        android:ems="10"
        android:id="@+id/editText5"
        android:textColor="?attr/actionModeSplitBackground"
        android:background="@drawable/background_new"
        android:layout_alignTop="@+id/checkBox3"
        android:layout_toEndOf="@+id/checkBox3"
        android:layout_marginStart="65dp" />


    <CheckBox
        android:text="S/O   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:background="#7f7f7f"
        android:checked="false"
        android:layout_marginTop="101dp"
        android:layout_below="@+id/textView8"
        android:layout_toStartOf="@+id/textView8" />

    <TextView
        android:text="OCCUPATION :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView13" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="STUDENT"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toEndOf="@+id/textView11"
        android:textColor="?attr/actionModeSplitBackground" />

    <TextView
        android:text="PHN NO :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView11"
        android:layout_toEndOf="@+id/editText6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText7"
        android:text="1234567890"
        android:textColor="?attr/colorPrimaryDark"
        android:layout_alignTop="@+id/editText6"
        android:layout_toEndOf="@+id/editText8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText8"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/checkBox2"
        android:text="PATULI FLAT NO 603"
        android:textSize="10sp"
        android:textStyle="normal|italic"
        android:textAllCaps="true"
        android:background="#d6cfcf"
        android:textColor="#000000"
        android:layout_marginLeft="20dp" />

    <Button
        android:text="BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView13"
        android:layout_marginBottom="11dp"
        android:id="@+id/button6"
        android:textStyle="normal|bold" />

    <Button
        android:text="CLEAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/submit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:id="@+id/button8"
        android:textStyle="normal|bold" />

    <Button
        android:text="SUBMIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />


    <TextView
        android:text="ADDRESS :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:paddingLeft="0dp"
        android:id="@+id/textView13"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:layout_below="@+id/editText6"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture Image"
        android:id="@+id/captureImage"
        android:layout_above="@+id/textView11"
        android:layout_alignStart="@+id/textView13" />



</RelativeLayout>