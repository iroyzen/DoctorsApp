<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="toton.lazycoder.com.helloworld.Diagnosis.Palpitation"
    android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView15"
        android:layout_gravity="left|top" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Duration?"
                    android:textColor="#212525"
                    android:id="@+id/palpitationDuration"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">

                        <EditText
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/editText_palpitationDuration"
                            android:layout_column="2"
                            android:background="@drawable/background"
                            android:layout_height="35dp"
                            android:layout_width="100dp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="days"
                            android:layout_column="4"
                            android:textColor="#262525"
                            android:layout_marginLeft="10dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Type ?"
                    android:id="@+id/palpitationType"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:textColor="#000000" />

                <Spinner
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner_palpitationType"
                    android:layout_marginLeft="30dp"
                    android:backgroundTint="#488f05"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="How long does it last?"
                    android:textColor="#212525"
                    android:id="@+id/palpitationHowLong"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">

                        <EditText
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/editText_palpitationHowLong"
                            android:layout_column="2"
                            android:background="@drawable/background"
                            android:layout_height="35dp"
                            android:layout_width="100dp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="days"
                            android:layout_column="4"
                            android:textColor="#262525"
                            android:layout_marginLeft="10dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Any associated Symptom?"
                    android:textColor="#212525"
                    android:id="@+id/palpitationSymptom"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Others   "
                            android:id="@+id/checkBox_palpitationOtherSymptom"
                            android:button="@drawable/abc_btn_check_material"
                            android:buttonTint="#000000"
                            android:textColor="#020202"
                            android:theme="@style/MyCheckBox" />

                        <EditText
                            android:inputType="text"
                            android:ems="10"
                            android:id="@+id/editText_palpitationOtherSymptom"
                            android:layout_column="4"
                            android:background="@drawable/background"
                            android:layout_height="35dp"
                            android:layout_width="500dp"
                            android:textColor="#000000"
                            android:layout_marginBottom="10dp" />

                    </TableRow>
                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Fainting ?"
                    android:id="@+id/palpitationFaint"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:textColor="#000000" />

                <Spinner
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner_palpitationFaint"
                    android:layout_marginLeft="30dp"
                    android:backgroundTint="#488f05"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Fall ?"
                    android:id="@+id/palpitationFall"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:textColor="#000000" />

                <Spinner
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner_palpitationFall"
                    android:layout_marginLeft="30dp"
                    android:backgroundTint="#488f05"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Dizziness ?"
                    android:id="@+id/palpitationDizzyness"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:textColor="#000000" />

                <Spinner
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner_palpitationDizziness"
                    android:layout_marginLeft="30dp"
                    android:backgroundTint="#488f05"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="What brings it on?"
                    android:textColor="#212525"
                    android:id="@+id/palpitationStart"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/editText_palpitationStart"
                    android:background="@drawable/background"
                    android:layout_height="35dp"
                    android:layout_width="500dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="What relieves it?"
                    android:textColor="#212525"
                    android:id="@+id/palpitationRelief"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/editText_palpitationRelief"
                    android:background="@drawable/background"
                    android:layout_height="35dp"
                    android:layout_width="500dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="200dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/backButtonAbdominalPain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/back_button"
            />

        <Button
            android:id="@+id/continueButtonAbdominalPain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/continue_button"/>
    </LinearLayout>
</FrameLayout>
