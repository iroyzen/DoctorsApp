<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="toton.lazycoder.com.helloworld.GeneralObservation.GeneralObservation"
    android:background="@drawable/back20">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView17"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Past Medical History:"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="1000dp"
                    android:layout_height="200dp"
                    android:textColor="#000000"
                    android:layout_marginStart="30dp"
                    android:id="@+id/editText_PastMedicalHistory"
                    android:background="@drawable/background_new"
                    android:gravity="top|left" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_weight="5.63">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height:  "
                    android:layout_row="0"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editText_Height"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:background="@drawable/background_new" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight:   "
                    android:layout_row="0"
                    android:layout_column="2"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="200dp" />
                <EditText
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editText_Weight"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:background="@drawable/background_new" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI:   "
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/textView_BMI"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:background="@drawable/background_new"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pulse:   "
                    android:layout_row="1"
                    android:layout_column="2"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="30dp" />
                <EditText
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editText_Pulse"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:background="@drawable/background_new"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BP:   "
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp" />

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:id="@+id/editText_BP"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:background="@drawable/background_new"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature:   "
                    android:layout_row="2"
                    android:layout_column="2"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="30dp" />
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/editText_Temperature"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:background="@drawable/background_new"
                    android:layout_marginTop="30dp" />
            </GridLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Any previous documents?"
                    android:layout_marginLeft="30dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="25dp" />

                <Spinner
                    android:layout_width="500dp"
                    android:layout_height="65dp"
                    android:id="@+id/spinner_PreviousDocuments"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/spinner_background" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Complaints :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp">

                    <ListView
                        android:id="@+id/document_pic_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:background="#7b55b10b"
                        android:layout_marginRight="10dp">
                    </ListView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/back_button"
            />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/continue_button"/>
    </LinearLayout>

</FrameLayout>
