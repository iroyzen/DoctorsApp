<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="toton.lazycoder.com.helloworld.Diagnosis.ThroatSwelling"
    android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:background="@drawable/background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView3"
            android:fillViewport="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Where is it?"
                    android:textColor="#212525"
                    android:id="@+id/throatSwellWhere"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <Spinner
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner_throatSwellPos"
                    android:background="@drawable/spinner_background"
                    android:spinnerMode="dropdown"
                    
                    android:backgroundTint="#488f05"
                    android:layout_marginLeft="30dp" />
            </LinearLayout>




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="How many?"
                android:textColor="#212525"
                android:id="@+id/throatSwellNumber"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:text="Single"
                    android:id="@+id/SingleSwellThroat"
                    android:textColor="#060505"
                    android:layout_marginLeft="30dp"
                    android:checked="false"
                    android:button="@drawable/abc_btn_radio_material"
                    android:buttonTint="#000000"
                    android:theme="@style/MyCheckBox" />

                <RadioButton
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:text="Multiple"
                    android:id="@+id/MultipleSwellThroat"
                    android:textColor="#060505"
                    android:backgroundTint="#f69ff51d"
                    android:layout_marginLeft="30dp"
                    android:checked="false"
                    android:button="@drawable/abc_btn_radio_material"
                    android:buttonTint="#000000"
                    android:theme="@style/MyCheckBox" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="How long has it been there?"
                android:textColor="#212525"
                android:id="@+id/throatSwellDuration"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <EditText
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/editText_throatSwellDuration"
                        android:layout_column="2"
                        android:background="@drawable/background"
                        android:layout_height="35dp"
                        android:layout_width="100dp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="days"
                        android:id="@+id/textView"
                        android:layout_column="4"
                        android:textColor="#262525"
                        android:layout_marginLeft="10dp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="How did it start?"
                android:textColor="#212525"
                android:id="@+id/throatSwellStart"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <Spinner
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/spinner_throatSwellStart"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown"
                
                android:backgroundTint="#488f05"
                android:layout_marginLeft="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Painful or not?"
                android:textColor="#212525"
                android:id="@+id/throatSwellPain"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <Spinner
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/spinner_throatSwellPain"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown"
                
                android:backgroundTint="#488f05"
                android:layout_marginLeft="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Has it changed in size?"
                android:textColor="#212525"
                android:id="@+id/throatSwellSize"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <Spinner
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/spinner_throatSwellSize"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown"
                
                android:backgroundTint="#488f05"
                android:layout_marginLeft="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Any change in colour of skin?"
                android:textColor="#212525"
                android:id="@+id/throatSwellSkin"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <Spinner
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:id="@+id/spinner_throatSwellSkin"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown"
                
                android:backgroundTint="#488f05"
                android:layout_marginLeft="30dp" />
        </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Any Other Symptom?"
                        android:textColor="#212525"
                        android:id="@+id/throatSwellOther"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp" />

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Difficulty in Movement"
                        android:id="@+id/throatSwellDiffMov"
                        android:button="@drawable/abc_btn_check_material"
                        android:buttonTint="#000000"
                        android:checked="false"
                        android:textAlignment="textStart"
                        android:textColor="#080808"
                        android:textSize="20dp"
                        android:layout_marginLeft="30dp"
                        android:textStyle="normal|italic"
                        android:theme="@style/MyCheckBox" />

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Difficulty in Work"
                        android:id="@+id/throatSwellDiffWork"
                        android:button="@drawable/abc_btn_check_material"
                        android:checked="false"
                        android:textAlignment="textStart"
                        android:textColor="#080808"
                        android:textSize="20dp"
                        android:layout_marginLeft="30dp"
                        android:textStyle="normal|italic"
                        android:buttonTint="#000000"
                        android:theme="@style/MyCheckBox" />
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Other  "
                                android:id="@+id/throatSwellOtherSymp"
                                android:layout_column="2"
                                android:textColor="#262525"
                                android:layout_marginLeft="10dp" />

                            <EditText
                                android:inputType="text"
                                android:ems="10"
                                android:id="@+id/editText_throatSwellOtherSymp"
                                android:layout_column="4"
                                android:background="@drawable/background"
                                android:layout_height="35dp"
                                android:layout_width="500dp"
                                android:textColor="#000000"
                                android:layout_marginBottom="10dp" />

                        </TableRow>
                    </TableLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Any history of injury?"
                        android:textColor="#212525"
                        android:id="@+id/throatSwellHistory"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp" />

                    <Spinner
                        android:layout_width="400dp"
                        android:layout_height="50dp"
                        android:id="@+id/spinner_throatSwellHistory"
                        android:background="@drawable/spinner_background"
                        android:spinnerMode="dropdown"
                        
                        android:backgroundTint="#488f05"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Excessive Sweating?"
                        android:textColor="#212525"
                        android:id="@+id/throatSwellSweat"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp" />

                    <Spinner
                        android:layout_width="400dp"
                        android:layout_height="50dp"
                        android:id="@+id/spinner_throatSwellSweat"
                        android:background="@drawable/spinner_background"
                        android:spinnerMode="dropdown"
                        
                        android:backgroundTint="#488f05"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Constipation?"
                        android:textColor="#212525"
                        android:id="@+id/throatSwellConstipation"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp" />

                    <Spinner
                        android:layout_width="400dp"
                        android:layout_height="50dp"
                        android:id="@+id/spinner_throatSwellConstipation"
                        android:background="@drawable/spinner_background"
                        android:spinnerMode="dropdown"
                        
                        android:backgroundTint="#488f05"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Period Problem?"
                        android:textColor="#212525"
                        android:id="@+id/throatSwellPeriod"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp" />

                    <Spinner
                        android:layout_width="400dp"
                        android:layout_height="50dp"
                        android:id="@+id/spinner_throatSwellPeriod"
                        android:background="@drawable/spinner_background"
                        android:spinnerMode="dropdown"
                        
                        android:backgroundTint="#488f05"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Excessive Appetite?"
                        android:textColor="#212525"
                        android:id="@+id/throatSwellAppetite"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp" />

                    <Spinner
                        android:layout_width="400dp"
                        android:layout_height="50dp"
                        android:id="@+id/spinner_throatSwellAppetite"
                        android:background="@drawable/spinner_background"
                        android:spinnerMode="dropdown"
                        
                        android:backgroundTint="#488f05"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Change in Weight?"
                        android:textColor="#212525"
                        android:id="@+id/throatSwellWeight"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp" />

                    <Spinner
                        android:layout_width="400dp"
                        android:layout_height="50dp"
                        android:id="@+id/spinner_throatSwellWeight"
                        android:background="@drawable/spinner_background"
                        android:spinnerMode="dropdown"
                        
                        android:backgroundTint="#488f05"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="General Weakness?"
                        android:textColor="#212525"
                        android:id="@+id/throatSwellWeak"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp" />

                    <Spinner
                        android:layout_width="400dp"
                        android:layout_height="50dp"
                        android:id="@+id/spinner_throatSwellWeak"
                        android:background="@drawable/spinner_background"
                        android:spinnerMode="dropdown"
                        
                        android:backgroundTint="#488f05"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="200dp"/>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/backButtonAbdominalPain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/back_button"
            />

        <Button
            android:id="@+id/continueButtonAbdominalPain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/continue_button"/>
    </LinearLayout>
</FrameLayout>
