<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="toton.lazycoder.com.helloworld.Diagnosis.Fever"
    android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="left|top" >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Duration?"
                    android:textColor="#212525"
                    android:id="@+id/feverDuration"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">

                        <EditText
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/editText_feverDuration"
                            android:layout_column="2"
                            android:background="@drawable/background"
                            android:layout_height="35dp"
                            android:layout_width="100dp"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="days"
                            android:layout_column="4"
                            android:textColor="#262525"
                            android:layout_marginLeft="10dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Nature?"
                    android:textColor="#212525"
                    android:id="@+id/feverNature"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <Spinner
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner_feverNature"
                    android:background="@drawable/spinner_background"
                    android:spinnerMode="dropdown"
                    
                    android:backgroundTint="#488f05"
                    android:layout_marginLeft="30dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Type?"
                    android:textColor="#212525"
                    android:id="@+id/feverType"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All day"
                    android:id="@+id/checkBox_feverAllDay"
                    android:layout_marginLeft="30dp"
                    android:button="@drawable/abc_btn_check_material"
                    android:buttonTint="#000000"
                    android:textColor="#020202"
                    android:theme="@style/MyCheckBox" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Part of Day(Morning)"
                    android:id="@+id/checkBox_feverMorning"
                    android:layout_marginLeft="30dp"
                    android:button="@drawable/abc_btn_check_material"
                    android:buttonTint="#000000"
                    android:textColor="#020202"
                    android:theme="@style/MyCheckBox" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Part of Day(Evening)"
                    android:id="@+id/checkBox_feverEvening"
                    android:layout_marginLeft="30dp"
                    android:button="@drawable/abc_btn_check_material"
                    android:buttonTint="#000000"
                    android:textColor="#020202"
                    android:theme="@style/MyCheckBox" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Part of day(Night)"
                    android:id="@+id/checkBox_feverNight"
                    android:layout_marginLeft="30dp"
                    android:button="@drawable/abc_btn_check_material"
                    android:buttonTint="#000000"
                    android:textColor="#020202"
                    android:theme="@style/MyCheckBox" />


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Others   "
                            android:id="@+id/checkBox_feverOtherType"
                            android:button="@drawable/abc_btn_check_material"
                            android:buttonTint="#000000"
                            android:textColor="#020202"
                            android:theme="@style/MyCheckBox" />

                        <EditText
                            android:inputType="text"
                            android:ems="10"
                            android:id="@+id/editText_feverOtherType"
                            android:layout_column="4"
                            android:background="@drawable/background"
                            android:layout_height="35dp"
                            android:layout_width="500dp"
                            android:textColor="#000000"
                            android:layout_marginBottom="10dp" />

                    </TableRow>
                </TableLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="How much?"
                    android:textColor="#212525"
                    android:id="@+id/feverHowMuch"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <Spinner
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner_feverHowMuch"
                    android:background="@drawable/spinner_background"
                    android:spinnerMode="dropdown"
                    
                    android:backgroundTint="#488f05"
                    android:layout_marginLeft="30dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Shivers?"
                    android:textColor="#212525"
                    android:id="@+id/feverShivers"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <Spinner
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner_feverShivers"
                    android:background="@drawable/spinner_background"
                    android:spinnerMode="dropdown"
                    
                    android:backgroundTint="#488f05"
                    android:layout_marginLeft="30dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Any Cough?"
                    android:textColor="#212525"
                    android:id="@+id/feverCough"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <Spinner
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner_feverCough"
                    android:background="@drawable/spinner_background"
                    android:spinnerMode="dropdown"
                    
                    android:backgroundTint="#488f05"
                    android:layout_marginLeft="30dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Any cough with bleeding?"
                    android:textColor="#212525"
                    android:id="@+id/feverCoughBleed"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <Spinner
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner_feverCoughBleed"
                    android:background="@drawable/spinner_background"
                    android:spinnerMode="dropdown"
                    
                    android:backgroundTint="#488f05"
                    android:layout_marginLeft="30dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Any pain?"
                    android:textColor="#212525"
                    android:id="@+id/feverPain"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:id="@+id/feverPainNo"
                        android:textColor="#060505"
                        android:layout_marginLeft="30dp"
                        android:checked="false"
                        android:button="@drawable/abc_btn_radio_material"
                        android:buttonTint="#000000"
                        android:clickable="true" />

                    <RadioButton
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:id="@+id/feverPainYes"
                        android:textColor="#060505"
                        android:backgroundTint="#f69ff51d"
                        android:layout_marginLeft="30dp"
                        android:checked="false"
                        android:button="@drawable/abc_btn_radio_material"
                        android:buttonTint="#000000"
                        android:clickable="true"/>
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="If yes,then describe?"
                        android:textColor="#212525"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="1" />

                    <EditText
                        android:inputType="text"
                        android:id="@+id/editText_feverPain"
                        android:background="@drawable/background"
                        android:layout_height="35dp"
                        android:layout_width="0dp"
                        android:layout_marginStart="30dp"
                        android:textColor="#000000"
                        android:layout_weight="2" />
                </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="General Weakness?"
                        android:textColor="#212525"
                        android:id="@+id/feverWeak"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp" />

                    <Spinner
                        android:layout_width="400dp"
                        android:layout_height="50dp"
                        android:id="@+id/spinner_feverWeak"
                        android:background="@drawable/spinner_background"
                        android:spinnerMode="dropdown"
                        
                        android:backgroundTint="#488f05"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Loss of Weight?"
                        android:textColor="#212525"
                        android:id="@+id/feverWeight"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp" />

                    <Spinner
                        android:layout_width="400dp"
                        android:layout_height="50dp"
                        android:id="@+id/spinner_feverWeight"
                        android:background="@drawable/spinner_background"
                        android:spinnerMode="dropdown"
                        
                        android:backgroundTint="#488f05"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Burning/frequency in urine??"
                        android:textColor="#212525"
                        android:id="@+id/feverUrine"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp" />

                    <Spinner
                        android:layout_width="400dp"
                        android:layout_height="45dp"
                        android:id="@+id/spinner_feverUrine"
                        android:background="@drawable/spinner_background"
                        android:spinnerMode="dropdown"
                        
                        android:backgroundTint="#488f05"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Any associated Symptom?"
                    android:textColor="#212525"
                    android:id="@+id/feverSymptom"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Others   "
                            android:id="@+id/checkBox_feverOtherSymptom"
                            android:button="@drawable/abc_btn_check_material"
                            android:buttonTint="#000000"
                            android:textColor="#020202"
                            android:theme="@style/MyCheckBox" />

                        <EditText
                            android:inputType="text"
                            android:ems="10"
                            android:id="@+id/editText_feverOtherSymptom"
                            android:layout_column="4"
                            android:background="@drawable/background"
                            android:layout_height="35dp"
                            android:layout_width="500dp"
                            android:textColor="#000000"
                            android:layout_marginBottom="10dp" />

                    </TableRow>
                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="What brings it on?"
                    android:textColor="#212525"
                    android:id="@+id/feverStart"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/editText_feverStart"
                    android:background="@drawable/background"
                    android:layout_height="35dp"
                    android:layout_width="500dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="What relieves it?"
                    android:textColor="#212525"
                    android:id="@+id/feverRelief"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/editText_feverRelief"
                    android:background="@drawable/background"
                    android:layout_height="35dp"
                    android:layout_width="500dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="200dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/backButtonAbdominalPain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/back_button"
            />

        <Button
            android:id="@+id/continueButtonAbdominalPain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/continue_button"/>
    </LinearLayout>
</FrameLayout>
